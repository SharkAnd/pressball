<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

<style name="SplachTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowFullscreen">true</item>
    <item name="android:background">@drawable/splash_screen</item>

</style>

    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/abc_ic_ab_back_material</item>

    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="navigat" >

        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="NavDrawerTextStyle">
        <item name="android:textSize">16sp</item> <!-- Размер текста -->
        <item name="android:textAllCaps">true</item>
        <item name="android:itemBackground">#ffffff</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:paddingTop">2dp</item>
        <item name="android:listPreferredItemHeightSmall">60dp</item><!-- menu item height-->
        <item name="listPreferredItemHeightSmall">60dp</item><!-- menu item height-->
        <item name="android:listPreferredItemPaddingLeft">25dp</item>
        <item name="listPreferredItemPaddingLeft">25dp</item>
    </style>

    <style name="CardStyle">
        <item name="android:background">@drawable/card</item>
    </style>

</resources>
