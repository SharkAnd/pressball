<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_postPB"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="4pt"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        style="@style/CardStyle"
        >

        <TextView
            android:id="@+id/time_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-10-28 08:12:59"
            android:textColor="@color/textm"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/rybrika"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="ПБ-Онлайн/Футбол"
            android:textColor="@color/textm"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/title_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_post"
            android:layout_marginTop="8dp"
            android:text="Динамовские юноши на международном турнире в Венгрии. Как это было?"
            android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/img_pbonline"

            android:layout_width="match_parent"
            android:layout_height="100pt"
            android:layout_below="@+id/title_post"
            android:layout_marginTop="5dp"
            android:src="@drawable/test2_photo" />

        <TextView
            android:id="@+id/text_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_pbonline"
            android:text="Экспозе: местных уверенно обыграли, с другими получилось непросто."
            android:textColor="@color/text"
            android:textSize="14dp" />

        <TextView

            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text_post"
            android:text="Николай ИВАНОВ"
            android:textColor="@color/textm"
            android:textSize="11dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>